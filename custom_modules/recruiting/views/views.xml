<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action Window -->
    <record id="action_beman_recruiting_main" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">recruiting.clients</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <div class="o_welcome_message">
                <h1 class="text-center o_wow_title display-3 fw-bold">Welcome to Beman Recruiting</h1>
                <div class="text-center lead mb-3">
                    Your complete recruitment management solution
                </div>
                <div class="text-center">
                    <p>Start managing your recruitment process by creating your first client!</p>
                    <a type="action" name="%(action_recruiting_clients)d" class="btn btn-primary">
                        Create First Client
                    </a>
                </div>
            </div>
        </field>
    </record>

    <!-- Clients List View -->
    <record id="view_recruiting_clients_tree" model="ir.ui.view">
        <field name="name">recruiting.clients.tree</field>
        <field name="model">recruiting.clients</field>
        <field name="arch" type="xml">
            <tree string="Clients">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="invoice" sum="Total Invoice"/>
                <field name="receive" sum="Total Receive"/>
                <field name="bill" sum="Total Bill"/>
                <field name="bill_pay" sum="Total Bill Pay"/>
                <field name="status"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Clients Form View -->
    <record id="view_recruiting_clients_form" model="ir.ui.view">
        <field name="name">recruiting.clients.form</field>
        <field name="model">recruiting.clients</field>
        <field name="arch" type="xml">
            <form string="Client">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="invoice"/>
                            <field name="receive"/>
                            <field name="bill"/>
                            <field name="bill_pay"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Clients Action -->
    <record id="action_recruiting_clients" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">recruiting.clients</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first client!
            </p>
        </field>
    </record>

    <!-- License List View -->
    <record id="view_recruiting_license_tree" model="ir.ui.view">
        <field name="name">recruiting.license.tree</field>
        <field name="model">recruiting.license</field>
        <field name="arch" type="xml">
            <tree string="Licenses">
                <field name="license_id"/>
                <field name="name"/>
                <field name="country"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- License Form View -->
    <record id="view_recruiting_license_form" model="ir.ui.view">
        <field name="name">recruiting.license.form</field>
        <field name="model">recruiting.license</field>
        <field name="arch" type="xml">
            <form string="License">
                <sheet>
                    <group>
                        <group>
                            <field name="license_id"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="country"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- License Action -->
    <record id="action_recruiting_license" model="ir.actions.act_window">
        <field name="name">Licenses</field>
        <field name="res_model">recruiting.license</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first license!
            </p>
        </field>
    </record>

    <!-- Job List View -->
    <record id="view_recruiting_job_tree" model="ir.ui.view">
        <field name="name">recruiting.job.tree</field>
        <field name="model">recruiting.job</field>
        <field name="arch" type="xml">
            <tree string="Jobs">
                <field name="date"/>
                <field name="sln"/>
                <field name="pp_name"/>
                <field name="client"/>
                <field name="pp_number"/>
                <field name="visa_number"/>
                <field name="occupation"/>
                <field name="medical_status"/>
                <field name="p_rate" sum="Total P Rate"/>
                <field name="country"/>
                <field name="company"/>
                <field name="others" sum="Total Others"/>
                <field name="total" sum="Grand Total"/>
                <field name="status"/>
                <field name="job_type"/>
                <field name="license_id"/>
            </tree>
        </field>
    </record>

    <!-- Job Form View -->
    <record id="view_recruiting_job_form" model="ir.ui.view">
        <field name="name">recruiting.job.form</field>
        <field name="model">recruiting.job</field>
        <field name="arch" type="xml">
            <form string="Job">
                <sheet>
                    <group>
                        <group>
                            <field name="license_id"/>
                            <field name="job_type"/>
                            <field name="status"/>
                            <field name="date"/>
                            <field name="sln"/>
                            <field name="pp_name"/>
                            <field name="client"/>
                            <field name="pp_number"/>
                            <field name="visa_number"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="occupation"/>
                            <field name="company_id_number"/>
                            <field name="worker_number"/>
                            <field name="p_rate"/>
                            <field name="country"/>
                            <field name="company"/>
                            <field name="others"/>
                            <field name="total"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documents &amp; Status">
                            <group>
                                <group string="Documents">
                                    <field name="diving_licence"/>
                                    <field name="police_clearance"/>
                                    <field name="medical"/>
                                    <field name="musaned"/>
                                    <field name="okala"/>
                                    <field name="mofa"/>
                                    <field name="stamping"/>
                                    <field name="finger"/>
                                    <field name="manpower"/>
                                </group>
                                <group string="Dates">
                                    <field name="musaned_date"/>
                                    <field name="okala_date"/>
                                    <field name="mofa_date"/>
                                    <field name="stamping_date"/>
                                    <field name="finger_date"/>
                                    <field name="manpower_date"/>
                                </group>
                            </group>
                            <group>
                                <field name="medical_status"/>
                            </group>
                            <group string="Remarks">
                                <field name="remarks" nolabel="1" placeholder="Enter remarks here..."/>
                            </group>
                        </page>
                        <page string="Other Information">
                            <group>
                                <field name="updated_by"/>
                                <field name="create_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Job Action -->
    <record id="action_recruiting_job" model="ir.actions.act_window">
        <field name="name">Jobs</field>
        <field name="res_model">recruiting.job</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first job!
            </p>
        </field>
    </record>

    <!-- Top Menu Item -->
    <menuitem 
        id="menu_beman_recruiting_root"
        name="Beman Recruiting"
        web_icon="recruiting,static/description/icon.png"
        sequence="75"/>

    <!-- Main Sub Menu -->
    <menuitem 
        id="menu_beman_recruiting_main"
        name="Dashboard"
        parent="menu_beman_recruiting_root"
        action="action_beman_recruiting_main"
        sequence="1"/>

    <!-- Clients Menu -->
    <menuitem
        id="menu_recruiting_clients"
        name="Clients"
        parent="menu_beman_recruiting_root"
        action="action_recruiting_clients"
        sequence="2"/>

    <!-- License Menu -->
    <menuitem
        id="menu_recruiting_license"
        name="Licenses"
        parent="menu_beman_recruiting_root"
        action="action_recruiting_license"
        sequence="3"/>

    <!-- Job Menu -->
    <menuitem
        id="menu_recruiting_job"
        name="Jobs"
        parent="menu_beman_recruiting_root"
        action="action_recruiting_job"
        sequence="4"/>
</odoo> 